{
  "name": "fe_dev",
  "version": "1.0.0",
  "description": "Web front-end dev",
  "main": "index.js",
  "scripts": {
    "build:css": "postcss src/**/*.css --base src/assets/css/page -d dist/css -w",
    "build:html": "nunjucks *.njk -p src -o dist -w",
    "build:js": "parcel watch src/assets/js/page/*.js -d dist/js --public-url . --no-cache --no-hmr",
    "clean": "rimraf dist",
    "serve": "browser-sync start -s dist -f dist --startPath index.html",
    "start": "run-p build:* serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gmdr1024/fe_dev.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gmdr1024/fe_dev/issues"
  },
  "homepage": "https://github.com/gmdr1024/fe_dev#readme",
  "devDependencies": {
    "browser-sync": "^2.26.13",
    "chokidar-cli": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "nunjucks-cli": "^1.0.0",
    "parcel": "^1.12.4",
    "postcss": "^8.1.10",
    "postcss-cli": "^8.3.0",
    "rimraf": "^3.0.2"
  }
}
