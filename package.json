{
  "name": "fe_dev",
  "version": "1.0.0",
  "description": "Web front-end dev",
  "main": "index.js",
  "scripts": {
    "build": "run-p build:*",
    "build:css": "postcss src/assets/css/*.css -u postcss-import autoprefixer -d dist/css",
    "build:html": "nunjucks *.njk -p src -o dist",
    "build:js": "parcel build src/assets/js/*.js -d dist/js --public-url .",
    "build:img": "imagemin src/assets/img/* -o dist/img",
    "clean": "rimraf dist",
    "lint": "run-s lint:*",
    "lint:css": "stylelint src/**/*.css",
    "lint:js": "eslint src/**/*.js",
    "serve": "browser-sync start -s dist -f dist --startPath index.html",
    "start": "npm-run-all clean lint build:* -p watch serve",
    "watch": "run-p watch:*",
    "watch:css": "chokidar src/**/*.css -c \"run-s lint:css build:css\"",
    "watch:html": "chokidar src/**/*.njk -c \"npm run build:html\"",
    "watch:js": "chokidar src/**/*.js -c \"run-s lint:js build:js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gmdr1024/fe_dev.git"
  },
  "author": "gmdr1024 (https://github.com/gmdr1024)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gmdr1024/fe_dev/issues"
  },
  "homepage": "https://github.com/gmdr1024/fe_dev#readme",
  "devDependencies": {
    "autoprefixer": "^10.0.4",
    "browser-sync": "^2.26.13",
    "chokidar-cli": "^2.1.0",
    "eslint": "^7.14.0",
    "imagemin-cli": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "nunjucks-cli": "^1.0.0",
    "parcel": "^1.12.4",
    "postcss": "^8.1.10",
    "postcss-cli": "^8.3.0",
    "postcss-import": "^13.0.0",
    "rimraf": "^3.0.2",
    "stylelint": "^13.8.0",
    "stylelint-config-standard": "^20.0.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {}
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
